sqoop import \
--options-file ./connection.props \
--table order_items_nopk \
--delete-target-dir \
--target-dir /user/bbastola/sqoop_import/order_items \
--autoreset-to-one-mapper

//This comes in use if the table you're importing doesn't have a Primary Key column
//It helps to reset the mapper to one mapper
//no need to use split-by while using This
//If PK is present then the number of mappers used will be either default(4) or whatever the user has provided with
