sqoop import \
--connect jdbc:mysql://ms.itversity.com/hr_db \
--username hr_user \
--password itversity \
--target-dir /user/bbastola/sqoop_import/employees \
--delete-target-dir \
--query "select * from employees where \$CONDITIONS and (hire_date between CAST('1980-12-31' AS DATE) and CAST('1995-12-31' AS DATE))" \
--num-mappers 1 \
--fields-terminated-by "|" 

//Now to do incremental upload

sqoop import \
--connect jdbc:mysql://ms.itversity.com/hr_db \
--username hr_user \
--password itversity \
--target-dir /user/bbastola/sqoop_import/employees \
--table employees \
--where "hire_date between '1996-01-01' and '1996-12-31'" \
--num-mappers 1 \
--fields-terminated-by "|" \
--incremental append \
--check-column hire_date

// 3 arguments to keep in mind while doing incremental
    1. --check-column
    2. --incremental <mode> mode could be append or lastmodified
    3. --last-value --> last value of check column field.