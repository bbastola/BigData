sqoop import \
--options-file connection.props \
--table order_items \
--hive-import \
--hive-database bbastola_sqoop_import \
--num-mappers 2 \

//if no hive table exist while importing then it will create a new one
//if same above command is run again then it will append the data to existing hive table

--hive-overwrite argument will drop the existing table and reload the data into the table.
--create-hive-table - this argument will check existing table and throws error message if table exists.

sqoop import-all-tables \
--options-file connection.props \
--hive-import \
--hive-database bbastola_sqoop_import \
--autoreset-to-one-mapper
