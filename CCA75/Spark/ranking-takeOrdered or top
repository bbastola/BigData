//Get top N products by price - Global Ranking - top or takeOrdered( takeOrdered gives ascending order, Top gives descening)

products = sc.textFile("/public/retail_db/products")
productsFilter = products.filter(lambda rec: rec.split(",")[4] != "")
productsTop5Price = productsFilter.takeOrdered(5 ,key = lambda rec: -float(rec.split(",")[4]))

top

productsTop5Price = productsFilter.top(5, key = lambda rec: float(rec.split(",")[4]))


