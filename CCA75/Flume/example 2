# Name the components on this agent - ws
ws.sources = wh
ws.sinks = hd
ws.channels = mem

# Describe/configure the source
ws.sources.wh.type = exec
ws.sources.wh.command = tail -F /opt/gen_logs/logs/access.log

# Describe the sink
ws.sinks.hd.type = hdfs
ws.sinks.hd.hdfs.path = hdfs://nn01.itversity.com:8020/user/bbastola/flume_demo

ws.sinks.hd.hdfs.filePrefix = FlumDemo 
ws.sinks.hd.hdfs.fileSuffix = .txt
ws.sinks.hd.hdfs.rollInterval = 120
ws.sinkd.hd.hdfs.rollSize = 1048576
ws.sinkd.hd.hdfs.rollCount = 100
ws.sinkd.hd.hdfs.fileType = DataStream 

# Use a channel which buffers events in memory
ws.channels.mem.type = memory
ws.channels.mem.capacity = 1000
ws.channels.mem.transactionCapacity = 100

# Bind the source and sink to the channel
ws.sources.wh.channels = mem
ws.sinks.hd.channel = mem